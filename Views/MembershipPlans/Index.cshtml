@model IEnumerable<GymMemberships.Models.MembershipPlan>

@{
    ViewData["Title"] = "Index";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Hoverable Table rows -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Memberships Plan</h5>
            <a asp-action="Create">
                <button type="button" class="btn btn-primary">Create</button>
            </a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Plan Name</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)



                    {
                        <tr>
                            <td><span>@Html.DisplayFor(modelItem => item.PlanName)</span></td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td><span>@Html.DisplayFor(modelItem => item.Description)</span></td>
                            <td>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.Id">
                                        <button type="button" class="btn btn-primary">
                                            Edit
                                        </button>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        <button type="button" class="btn btn-secondary">
                                            Details
                                        </button>
                                    </a>
                                    <button type="button" class="btn btn-danger" onclick="showDeleteModal(@item.Id)">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Modal -->
            <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Delete confirmation content will be loaded here -->
                        </div>
                        <div class="modal-footer">
                            <!-- Footer content if needed -->
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!--/ Hoverable Table rows -->
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript">
        function showDeleteModal(planId) {
            // Use AJAX to fetch the delete confirmation view for the membership plan
            $.get('@Url.Action("Delete", "MembershipPlans")', { id: planId }, function (data) {
                // Load the fetched content into the modal body
                $('#deleteConfirmationModal .modal-body').html(data);
                // Show the modal
                $('#deleteConfirmationModal').modal('show');
            });
        }
    </script>
}