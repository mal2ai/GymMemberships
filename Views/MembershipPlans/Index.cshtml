@model IEnumerable<GymMemberships.Models.MembershipPlan>

@{
    ViewData["Title"] = "Index";
}

<h1>Gym Membership Plan Price List</h1>

<p>
    <a class="badge badge-sm bg-gradient-secondary" asp-action="Create">Create New</a>
</p>


<div class="container-fluid py-2">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Membership Plan Information</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.PlanName)</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Price)</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Description)</th>
                                    <th class="text-secondary opacity-7">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                       
                                        <td class="align-middle text-center text-sm">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.PlanName)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.Price)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.Description)</span>
                                        </td>
                                        <td class="align-middle">
                                            <a class="badge badge-sm bg-gradient-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a class="badge badge-sm bg-gradient-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a class="badge badge-sm bg-gradient-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            
                                        </td>
                                    </tr>




                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>