@model IEnumerable<GymMemberships.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<div class="container-xxl flex-grow-1 container-p-y">
<!-- Hoverable Table rows -->
<div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Memberships Details</h5>
            <div class="ml-auto">
                <a asp-action="Create">
                    <button type="button" class="btn btn-primary">Create</button>
                </a>
                <button class="btn btn-success" onclick="openPrintPage()">Print</button>
            </div>
        </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Membership Plan</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)

                {
                    <tr>
                        <td><span>@Html.DisplayFor(modelItem => item.Name)</span></td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td><span>@Html.DisplayFor(modelItem => item.Phone)</span></td>
                        <td><span>@ViewData[$"MembershipPlanName_{item.Id}"]</span></td>
                        <td><span>@item.StartDate.ToString("dd/MM/yyyy")</span></td>
                        <td><span>@item.EndDate.ToString("dd/MM/yyyy")</span></td>
                            <td>
                                <span class="badge
                                    @(item.Status == "Active" ? "bg-label-success" :
                                      item.Status == "Expired" ? "bg-label-secondary" :
                                      item.Status == "Deactivated" ? "bg-label-danger" :
                                      "bg-label-warning")">
                                        @(item.Status ?? "Unknown")
                                </span>
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="bx bx-info-circle me-1"></i> Details
                                        </a>
                                        <a class="dropdown-item text-danger" href="javascript:void(0);" onclick="showDeleteModal(@item.Id)">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>

                    </tr>
                }
            </tbody>
        </table>

            <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- This content will be loaded dynamically -->
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
</div>
<!--/ Hoverable Table rows -->

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript">
        function showDeleteModal(memberId) {
            // Use AJAX to fetch the delete confirmation view
            $.get('@Url.Action("Delete", "Members")', { id: memberId }, function(data) {
                // Load the fetched content into the modal body
                $('#deleteConfirmationModal .modal-body').html(data);
                // Show the modal
                $('#deleteConfirmationModal').modal('show');
            });
        }
    </script>
    <script>
        function openPrintPage() {
            window.open('@Url.Action("Report", "Members")', '_blank');
        }
    </script>
}
