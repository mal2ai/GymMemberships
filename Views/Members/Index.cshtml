@model IEnumerable<GymMemberships.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1>Gym Membership's Member List</h1>

<p>
    <a class="badge badge-sm bg-gradient-secondary" asp-action="Create">Create New</a>
</p>


<div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-header">
                <h4 class="card-title">Member's Information</h4>
              </div>
              <div class="card-body">
                <div class="table">
                  <table class="table tablesorter " id="">
                    <thead class=" text-primary">
                      <tr>
                        <th>
                                        @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                                        @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                                        @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th>
                                        @Html.DisplayNameFor(model => model.MembershipPlanId)
                        </th>
                        <th>
                                        Action
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                                            @Html.DisplayFor(modelItem => item.MembershipPlanId)
                        </td>
                        <td>
                                            <a class="badge badge-sm bg-gradient-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a class="badge badge-sm bg-gradient-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a class="badge badge-sm bg-gradient-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                      </tr>
                    }
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          
        </div>
        </div>
       
 
       