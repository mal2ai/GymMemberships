@model GymMemberships.Models.Member

@{
    ViewData["Title"] = "Details";
}

<style>
    input[readonly], textarea[readonly] {
        background-color: white !important; /* Override the gray background */
        border-color: #ced4da !important; /* Keep the default border color */
        cursor: not-allowed !important; /* Optional: shows a "not allowed" cursor to indicate read-only */
    }
</style>

<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">

        <!-- Basic with Icons -->
        <div class="col-xxl">
            <div class="card mb-6">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Membership's Detail</h5>
                    
                </div>
                <div class="card-body">
                    <form>
                        <!-- Name -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Name</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text">
                                        <i class="bx bx-user"></i>
                                    </span>
                                    <input type="text"
                                           class="form-control"
                                           id="basic-icon-default-fullname"
                                           value="@Html.DisplayFor(model => model.Name)"
                                           placeholder="John Doe"
                                           aria-label="John Doe"
                                           aria-describedby="basic-icon-default-fullname2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Email</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                    <input type="text"
                                           id="basic-icon-default-email"
                                           class="form-control"
                                           value="@Html.DisplayFor(model => model.Email)"
                                           placeholder="john.doe@example.com"
                                           aria-label="john.doe"
                                           aria-describedby="basic-icon-default-email2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-phone">Phone No</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class="bx bx-phone"></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           value="@Html.DisplayFor(model => model.Phone)"
                                           placeholder="658 799 8941"
                                           aria-label="658 799 8941"
                                           aria-describedby="basic-icon-default-phone2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Age -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-age">Age</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-age2" class="input-group-text">
                                        <i class="bx bx-calendar"></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-age"
                                           class="form-control"
                                           value="@Html.DisplayFor(model => model.Age)"
                                           placeholder="25"
                                           aria-label="25"
                                           aria-describedby="basic-icon-default-age2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Membership Plan -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-membership">Membership Plan</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-membership2" class="input-group-text">
                                        <i class="bx bx-credit-card"></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-membership"
                                           class="form-control"
                                           value="@ViewData["MembershipPlanName"]"
                                           placeholder="Premium Plan"
                                           aria-label="Premium Plan"
                                           aria-describedby="basic-icon-default-membership2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-address">Address</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-address2" class="input-group-text">
                                        <i class="bx bx-home"></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-address"
                                           class="form-control"
                                           value="@Html.DisplayFor(model => model.Address)"
                                           placeholder="1234 Main St, City, Country"
                                           aria-label="Address"
                                           aria-describedby="basic-icon-default-address2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Start Date -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-startdate">Start Date</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-startdate2" class="input-group-text">
                                        <i class="bx bx-calendar-event"></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-startdate"
                                           class="form-control"
                                           value="@Html.DisplayFor(model => model.StartDate)"
                                           placeholder="01/01/2023"
                                           aria-label="Start Date"
                                           aria-describedby="basic-icon-default-startdate2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- End Date -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-enddate">End Date</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-enddate2" class="input-group-text">
                                        <i class="bx bx-calendar-event"></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-enddate"
                                           class="form-control"
                                           value="@Html.DisplayFor(model => model.EndDate)"
                                           placeholder="01/01/2024"
                                           aria-label="End Date"
                                           aria-describedby="basic-icon-default-enddate2" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="row mb-6">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-status">Status</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-status2" class="input-group-text">
                                        <i class="bx bx-check-circle"></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-status"
                                           class="form-control"
                                           value="@Html.DisplayFor(model => model.Status)"
                                           placeholder="Active"
                                           aria-label="Status"
                                           aria-describedby="basic-icon-default-status2" readonly />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->