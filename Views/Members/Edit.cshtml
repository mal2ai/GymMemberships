@model GymMemberships.Models.Member

@{
    ViewData["Title"] = "Edit";
}

<body>
    <div class="container-index">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header text-center">
                        <h3>Edit <b>Member</b></h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="material-icons">&#xE7FD;</i></span>
                                    </div>
                                    <input asp-for="Name" class="form-control" placeholder="Edit Name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="material-icons">&#xE0BE;</i></span>
                                    </div>
                                    <input asp-for="Email" class="form-control" placeholder="Edit Email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="material-icons">&#xE55C;</i></span>
                                    </div>
                                    <input asp-for="Phone" class="form-control" placeholder="Edit Phone" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Age" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="material-icons">&#xE7FC;</i></span>
                                    </div>
                                    <input asp-for="Age" class="form-control" placeholder="Edit Age" />
                                </div>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MembershipPlanId" class="control-label"></label>
                                <select asp-for="MembershipPlanId" class="form-control" asp-items="@(ViewData["MembershipPlanId"] as SelectList)">
                                    <option value="">Select a Membership Plan</option>
                                </select>
                                <span asp-validation-for="MembershipPlanId" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-link">Back to Member List</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
