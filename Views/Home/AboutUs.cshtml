<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">

            <!-- Layout container -->
            <div class="layout-page">
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <!-- Video Background -->
                        <div class="video-background">
                            <video autoplay muted loop id="bg-video">
                                <source src="/img/background.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>

                        <!-- Card above carousel -->
                        <div class="card mb-4 transparent-card">
                            <div class="card-body text-center">
                                <!-- Description/About Us -->
                                <h4 class="card-text text-white">About Us</h4>
                            </div>
                        </div>

                        <!-- Card for explaining FlexFit -->
                        <div class="card mb-4 transparent-card">
                            <div class="card-body">
                                <!-- Content with left and right padding -->
                                <div class="d-flex justify-content-center align-items-center p-4">
                                    <!-- Left: FlexFit Logo -->
                                    <div class="flex-logo">
                                        <img src="/img/logo.png" alt="FlexFit Logo" width="200" />
                                    </div>

                                    <!-- Right: Title and Description -->
                                    <div class="flex-description ms-4">
                                        <h4 class="card-text text-white">About The <span style="font-style: italic;color:darkgrey">FlexFit</span></h4>
                                        <p class="text-white mt-2">
                                            FlexFit is a state-of-the-art gym dedicated to helping you achieve your fitness goals.
                                            With a variety of equipment and personal training options, we offer a comprehensive fitness experience.
                                            Whether you're new to working out or a seasoned athlete, we provide a supportive and motivating environment
                                            to help you succeed.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- our team -->
                        <div class="card mb-4 transparent-card">
                            <div class="card-body">
                                <h4 class="card-text text-white text-center mb-4">Our Team</h4>

                                <!-- Smaller Description Below the Title -->
                                <p class="text-white text-center mb-4" style="font-size: 0.9rem;">
                                    Meet the passionate and dedicated individuals behind FlexFit. Our team is committed to helping you achieve your fitness goals and providing expert guidance throughout your journey.
                                </p>

                                <!-- Horizontal Line with Gap -->
                                <hr style="border-color: #fff; border-width: 1px; margin-bottom: 30px; width: 20%; margin-left: auto; margin-right: auto; margin-bottom: 3rem;" />

                                <!-- Team Members Section -->
                                <div class="row text-center">
                                    <!-- Team Member 1 -->
                                    <div class="col-md-4">
                                        <div class="team-member">
                                            <img src="/assets/img/avatars/1.png" alt="Team Member 1" class="img-fluid rounded-circle mb-2" style="width: 150px; height: 150px; object-fit: cover;">
                                            <p class="text-white">John Doe</p>
                                        </div>
                                    </div>

                                    <!-- Team Member 2 -->
                                    <div class="col-md-4">
                                        <div class="team-member">
                                            <img src="/assets/img/avatars/5.png" alt="Team Member 2" class="img-fluid rounded-circle mb-2" style="width: 150px; height: 150px; object-fit: cover;">
                                            <p class="text-white">Jane Smith</p>
                                        </div>
                                    </div>

                                    <!-- Team Member 3 -->
                                    <div class="col-md-4">
                                        <div class="team-member">
                                            <img src="/assets/img/avatars/6.png" alt="Team Member 3" class="img-fluid rounded-circle mb-2" style="width: 150px; height: 150px; object-fit: cover;">
                                            <p class="text-white">Alice Johnson</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4 transparent-card" style="height: auto;">
                            <div class="card-body" style="padding: 30px;">
                                <h4 class="card-text text-white text-center mb-4" style="font-size: 1.8rem; font-weight: 600;">Contact Us</h4>

                                <!-- Description Below the Heading -->
                                <p class="text-white text-center" style="font-size: 1rem; margin-bottom: 30px;">
                                    We would love to hear from you! Whether you have a question, feedback, or just want to say hello, <br>
                                    feel free to reach out to us through the contact details below. Our team is always ready to assist you.
                                </p>

                                <!-- Horizontal Line -->
                                <hr style="border-color: #fff; border-width: 1px; margin-bottom: 30px; width: 20%; margin-left: auto; margin-right: auto;" />

                                <!-- New Section for Table Layout -->
                                <div class="table-section" style="padding-left: 20rem; padding-right: 20rem;">
                                    <table class="table text-white" style="border: none; width: 100%; table-layout: auto; margin-left: auto; margin-right: auto;">
                                        <tr>
                                            <td class="font-weight-bold" style="padding-right: 15px; width: 30%;">Our Address</td>
                                            <td>Flex Fit Gym, 9732+4R7, Main Blvd, Block M 4, Lake City, Lahore, Punjab, Pakistan</td>
                                        </tr>
                                        <tr>
                                            <td class="font-weight-bold" style="padding-right: 15px;">Phone Number</td>
                                            <td>+92 123 456 7890</td>
                                        </tr>
                                        <tr>
                                            <td class="font-weight-bold" style="padding-right: 15px;">Email Us</td>
                                            <td>contact@flexfit.com</td>
                                        </tr>
                                        <tr>
                                            <td class="font-weight-bold" style="padding-right: 15px;">Follow Us</td>
                                            <td>
                                                <a href="https://facebook.com" target="_blank" class="social-link">Facebook</a> |
                                                <a href="https://twitter.com" target="_blank" class="social-link">Twitter</a> |
                                                <a href="https://instagram.com" target="_blank" class="social-link">Instagram</a>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Our Location -->
                        <div class="card mb-4 transparent-card" style="height: auto;">
                            <div class="card-body" style="padding: 20px;">
                                <h4 class="card-text text-white text-center mb-4">Our Location</h4>

                                <!-- Gym-related description below the title -->
                                <p class="text-white text-center mb-3">
                                    Welcome to Flex Fit! Our gym is equipped with state-of-the-art fitness equipment to help <br />
                                    you reach your fitness goals. Whether you're a beginner or a seasoned athlete, our facility offers a wide range of programs <br />
                                    designed to challenge and inspire you.
                                </p>

                                <!-- Horizontal Line with Gap -->
                                <hr style="border-color: #fff; border-width: 1px; margin-bottom: 30px; width: 20%; margin-left: auto; margin-right: auto; margin-bottom: 3rem;" />

                                <!-- Google Map Embed -->
                                <div class="map-container" style="height: 400px; margin-top: 20px;">
                                    <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=9732+4R7,%20Main%20Blvd,%20Block%20M%204%20Lake%20City,%20Lahore,%20Punjab,%20Pakistan+(Flex%20Fit)&amp;t=&amp;z=16&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"><a href="https://www.gps.ie/">gps trackers</a></iframe>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- / Content -->
                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="../assets/vendor/libs/jquery/jquery.js"></script>
    <script src="../assets/vendor/libs/popper/popper.js"></script>
    <script src="../assets/vendor/js/bootstrap.js"></script>
    <script src="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="../assets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <!-- Main JS -->
    <script src="../assets/js/main.js"></script>
    <!-- Page JS -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>

    <style>
        .video-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Ensures the video stays in the background */
        }

        #bg-video {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .transparent-card {
            background: rgba(0, 0, 0, 0.5); /* Transparent background */
            color: white;
            border: none;
            position: relative;
            z-index: 10;
        }

        /* Add padding on left and right of the card body content */
        .card-body {
            padding-left: 20rem;
            padding-right: 20rem;
        }

        /* Add padding to the flex container */
        .d-flex {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1rem; /* Space between logo and description */
        }

        /* Ensure padding/margin inside the content */
        .px-4 {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        /* Adjust logo size */
        .flex-logo img {
            width: 200px;
            height: auto; /* Ensure aspect ratio is maintained */
        }

        /* Title and description adjustments */
        .flex-description {
            text-align: left; /* Align text to the left */
        }

        .social-link {
            color: gray;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .social-link:hover {
                color: white;
            }
    </style>
</body>