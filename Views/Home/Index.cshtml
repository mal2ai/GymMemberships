    <!-- Gallery Section -->
    <div class="featured-grid">
        <div class="item">
            <iframe width="100%" height="100%" src="4367572-hd_1920_1080_30fps.mp4" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
