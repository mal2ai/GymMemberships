<style>
    /* Featured Products Section */
    .featured-grid {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding: 50px 20px;
    }

        .featured-grid .item {
            text-align: center;
            background-color: #1f324f;
            border-radius: 8px;
            padding: 15px;
            width: 300px; /* Standardized width */
            height: 300px; /* Standardized height */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            position: relative;
        }

            .featured-grid .item iframe {
                width: 100%; /* Ensure the iframe fits the container width */
                height: 100%; /* Ensure the iframe fits the container height */
                border-radius: 8px;
                display: block;
                margin: 0 auto;
            }

            .featured-grid .item h3 {
                color: #ffffff;
                margin: 10px 0;
            }

            .featured-grid .item p {
                color: #c7d4e8;
            }
</style>
