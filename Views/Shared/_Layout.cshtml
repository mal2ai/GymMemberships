<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymMemberships</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymMemberships.styles.css" asp-append-version="true" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body, html {
            margin: 0;
            padding: 10;
            width: 100%;
        }

        header {
            margin: 0;
            padding: 0;
        }

        body {
            color: #566787;
            background: #f5f5f5;
            font-family: 'Roboto', sans-serif;
        }

        .table-responsive {
            margin: 30px 0;
        }

        .table-wrapper {
            min-width: 1000px;
            background: #fff;
            padding: 20px;
            box-shadow: 0 1px 1px rgba(0,0,0,.05);
        }

        .table-title {
            padding-bottom: 10px;
            margin: 0 0 10px;
        }

            .table-title h2 {
                margin: 8px 0 0;
                font-size: 22px;
            }

        .search-box {
            position: relative;
            float: right;
        }

            .search-box input {
                height: 34px;
                border-radius: 20px;
                padding-left: 35px;
                border-color: #ddd;
                box-shadow: none;
            }

                .search-box input:focus {
                    border-color: #3FBAE4;
                }

            .search-box i {
                color: #a0a5b1;
                position: absolute;
                font-size: 19px;
                top: 8px;
                left: 10px;
            }

        table.table tr th, table.table tr td {
            border-color: #e9e9e9;
        }

        table.table-striped tbody tr:nth-of-type(odd) {
            background-color: #fcfcfc;
        }

        table.table-striped.table-hover tbody tr:hover {
            background: #f5f5f5;
        }

        table.table td a {
            color: #a0a5b1;
            display: inline-block;
            margin: 0 5px;
        }

            table.table td a.view {
                color: #03A9F4;
            }

            table.table td a.edit {
                color: #FFC107;
            }

            table.table td a.delete {
                color: #E34724;
            }

        .hint-text {
            float: left;
            margin-top: 6px;
            font-size: 95%;
        }

        .container {
            max-width: 900px;
            margin: 30px auto;
        }

        .container-index {
            max-width: 1200px;
            margin: 30px auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-size: 2.5rem;
            color: #393939;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 2rem;
            color: #444;
        }

        .section-content {
            font-size: 1rem;
            color: #666;
            margin-top: 1rem;
        }

        .icon {
            font-size: 2rem;
            color: #03a9f4;
            margin-right: 10px;
        }

        .icon-container {
            margin-top: 10px;
        }

        .icon-text {
            display: flex;
            align-items: center;
        }

            .icon-text p {
                margin-left: 10px;
            }

        /* Make the "Create New" button smaller */
        .btn-sm {
            padding: 6px 12px;
            font-size: 0.9rem;
        }

        /* Center the title above the table */
        .table-title h2 {
            text-align: center;
            margin-bottom: 1rem;
            font-size: 2.5rem;
            color: #393939;
        }
        }

        /* Optional: Add some space around the table and title for better organization */
        .table-wrapper {
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .navbar-nav {
            font-family: sans-serif;
            font-weight: 300; /* Make it bold for a cooler look */
        }

        .nav-link {
            font-size: 18px; /* Adjust the font size */
            letter-spacing: 1px; /* Add some spacing between the letters for style */
            transition: all 0.3s ease; /* Smooth transition for hover effects */
        }

            .nav-link:hover {
                color: #007bff; /* Change text color on hover */
                transform: scale(1.1); /* Slightly enlarge the link on hover */
            }
    </style>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Left Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://getrawnutrition.com/cdn/shop/files/RAW-Logos-01_200x.png?v=1660529628" alt="GymMemberships" style="height: 20px;" />
                </a>

                <!-- Centered Navigation Links -->
                <div class="navbar-collapse collapse d-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Members" asp-action="Index">Members</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MembershipPlans" asp-action="Index">Membership Plan</a>
                            </li>

                        }

                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Updated to container-fluid for full-width layout -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2024 - GymMemberships - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
