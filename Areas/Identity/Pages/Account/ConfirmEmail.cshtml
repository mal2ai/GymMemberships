@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<!-- Video Background -->
<video autoplay muted loop id="background-video">
    <source src="/img/background.mp4" type="video/mp4">
    Your browser does not support the video tag.
</video>

<div class="container-xxl flex-grow-1 container-p-y" style="position: relative; height: 100vh; overflow: hidden;">
    <div class="card mb-4 transparent-card" style="max-width: 800px; margin: 30px auto; border-radius: 10px; background-color: rgba(0, 0, 0, 0.6);">
        <div class="card-body" style="padding: 30px;">
            <!-- Title or Header for the Status Message -->
            <h4 class="card-text text-white text-center mb-4" style="font-size: 1.8rem; font-weight: 600;">Status Message</h4>

            <!-- Horizontal Line -->
            <hr style="border-color: #fff; border-width: 1px; margin-bottom: 30px; width: 20%; margin-left: auto; margin-right: auto;" />

            <!-- Include the Partial View for the Status Message -->
            <partial name="_StatusMessage" model="Model.StatusMessage" />
        </div>
    </div>
</div>

<style>
    /* Fullscreen video background */
    #background-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    /* Make card transparent */
    .transparent-card {
        background-color: rgba(255, 255, 255, 0.7); /* Adjust the transparency as needed */
        border: none;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Optional shadow to make card stand out */
    }
</style>
